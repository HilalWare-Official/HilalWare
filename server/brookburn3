--v2+2
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local workspace = game:GetService("Workspace")

-- CatchFire parçalarını liste
local catchFires = {}

-- Karakterin root'unu almak için fonksiyon
local function getRoot()
    local char = player.Character or player.CharacterAdded:Wait()
    return char:WaitForChild("HumanoidRootPart")
end

local root = getRoot()

-- Karakter resetlendiğinde root'u tekrar al
player.CharacterAdded:Connect(function(char)
    root = char:WaitForChild("HumanoidRootPart")
end)

-- CatchFire ekleme fonksiyonu
local function addCatchFire(part)
    if part:IsA("BasePart") and part.Name == "CatchFire" then
        part.CanCollide = false
        table.insert(catchFires, part)
    end
end

-- Başlangıçta workspace'deki mevcut CatchFire parçalarını ekle
for _, obj in ipairs(workspace:GetDescendants()) do
    addCatchFire(obj)
end

-- Yeni parçalar eklenirse dinle
workspace.DescendantAdded:Connect(function(obj)
    addCatchFire(obj)
end)

-- Sürekli listedeki CatchFire parçalarını oyuncuya ışınla
task.spawn(function()
    while task.wait(0.01) do
        if root and root.Parent then
            for _, part in ipairs(catchFires) do
                if part and part.Parent then
                    part.CanCollide = false
                    part.CFrame = root.CFrame
                end
            end
        end
    end
end)
